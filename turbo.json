{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dependencies": {
      "inputs": [],
      "outputs": []
    },
    "build": {
      "dependsOn": ["^dependencies", "^build", "^check-types"],
      "outputs": ["build/**"]
    },
    "check-types": {
      "dependsOn": ["^dependencies", "^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}